/* 新闻列表  */
#news-list {
    min-height: 600rpx;
    padding: 15rpx;
}
.list-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1rpx solid gray;
}

.list-item image {
    width: 230rpx !important;
    /* height: 150rpx; */
    margin: 10rpx;
}

.list-item .right {
    width: 273px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}

.list-item text {
    width: 100%;
    line-height: 60rpx;
    font-size: 10pt;
}