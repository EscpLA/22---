<!-- index.wxml -->

<!-- 视频播放器 -->
<video src="{{src}}" id="myVideo" controls enable-danmu danmu-btn></video>

<!-- 弹幕区域 -->
<view class="danmuArea">
    <input type="text" placeholder="请输入弹幕内容" bindinput="getDanmu" value="{{ danmu }}"/>
    <button>
        <text bindtap="sendDanmu" bindtap="sendDanmu">发送弹幕</text>
    </button>
</view>

<!-- 视频列表 -->
<view class="videoList">
    <view class="videoBar" wx:for="{{list}}" wx:key="index" bindtap="playVideo" data-url="{{ item.videoUrl }}">
        <image src="../../images/play.png"></image>
        <text>{{ item.title }}</text>
    </view>
</view>