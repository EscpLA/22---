/* index.wxss */
@import '../../static/wxss/animate.wxss';

.o0 {
    opacity: 0;
}

.o1 {
    opacity: 1;
}


page {
    height: 100%;
}

.container {
    height: 100%;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    background-color: pink;
}


.typeText {
    width: 292px;
    height: 200px;
    font-size: 80rpx;
    line-height: 150rpx;
    /* text-align: center; */
    margin-left: 60px;
}

#pointer {
    animation-name: blink;
    animation-iteration-count: infinite;
    animation-duration: 1s;
}

button {
    background-color: crimson !important;
    color: pink !important;
    border: none !important;
    padding: 20px !important;
    border-radius: 10px !important;
    font-size: 25px !important;
    /* position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 380px; */
    transition: all 1s;
}

/* 1. 打字效果的光标闪烁 */
@keyframes blink {

    0%,
    49% {
        opacity: 1;
    }

    50%,
    100% {
        opacity: 0;
    }
}

/* 2. 打字动画 */
@keyframes typing {
    0% {
        width: 0;
    }

    100% {
        width: 36vw;
    }

    /* 100% {
        width: 0;
      } */
}


/* 气泡特效 */
.bubble {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    position: absolute;
    box-shadow: 0 10px 10px rgba(0, 0, 0, 2), inset 0 10px 30px 5px rgba(255, 255, 255, 1);
    /* background-color: #fff; */
}
.b1 {
    left: -5%;
    top: 5%;
    transform: scale(0.6);
    animation: pao 15s linear infinite, direction 3s ease-in-out infinite alternate;
}
.b2 {
    left: 5%;
    top: 80%;
    transform: scale(0.4);
    animation: pao 10s linear infinite, direction 4s ease-in-out alternate;
}
.b3 {
    left: 10%;
    top: 40%;
    transform: scale(0.7);
    animation: pao 14s linear infinite, direction 2s ease-in-out alternate;
}
.b4 {
    left: 20%;
    top: 0%;
    transform: scale(0.3);
    animation: pao 11s linear infinite, direction 3s ease-in-out alternate;
}
.b5 {
    left: 30%;
    top: 50%;
    transform: scale(0.5);
    animation: pao 11s linear infinite, direction 3s ease-in-out alternate;
}
.b6 {
    left: 50%;
    top: 0%;
    transform: scale(0.8);
    animation: pao 11s linear infinite, direction 2s ease-in-out alternate;
}
.b7 {
    left: 65%;
    top: 70%;
    transform: scale(0.4);
    animation: pao 10s linear infinite, direction 2s ease-in-out alternate;
}
.b8 {
    left: 70%;
    top: 10%;
    transform: scale(0.6);
    animation: pao 11s linear infinite, direction 3s ease-in-out alternate;
}
.b9 {
    left: 80%;
    top: 50%;
    transform: scale(0.6);
    animation: pao 15s linear infinite, direction 4s ease-in-out alternate;
}
.b10 {
    left: 80%;
    top: 80%;
    transform: scale(0.3);
    animation: pao 13s linear infinite, direction 2s ease-in-out alternate;
}

@keyframes pao {
    0% {
        margin-top: 100%;
        /* bottom: 0; */
    }
    100%{
        margin-top: -100%;
        /* top: 0; */
    }
}
@keyframes direction {
    0% {
        margin-left: 0;
    }
    100% {
        margin-left: 50px;
    }
}
