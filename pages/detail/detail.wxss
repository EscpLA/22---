.container {
    padding: 15rpx;
    text-align: center;
}
/* 新闻标题 */
.title {
    font-size: 14pt;
    line-height: 80rpx;
}
/* 新闻图片 */
.poster image {
    width: 100%;
    /* width: 700rpx; */
}
/* 新闻正文 */
.content {
    text-align: center;
    font-size: 12pt;
    line-height: 60rpx;
}
/* 新闻日期 */
.add_date {
    font-size: 12pt;
    text-align: right;
    line-height: 30rpx;
